<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.diet4happlication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AllActivities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AllActivities.ProfileActivity" />
        <activity
            android:name=".AllActivities.LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllActivities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllActivities.BottomNavigationActivity"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AllActivities.DashBoardActivity"
            android:label="DashBoard" />
        <activity android:name=".AllActivities.FoodDiary" />
        <activity android:name=".AllActivities.RecepieActivity" />
        <activity android:name=".AllActivities.Meal_Activity" />
        <activity android:name=".Diet"></activity>
    </application>

</manifest>