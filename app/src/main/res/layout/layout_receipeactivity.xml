<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:id="@+id/iv_receipe"
        android:background="@drawable/receipe"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_receipe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_receipe"
        android:layout_margin="8dp"
        android:text="@string/receipe"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/id_linearlayoutreceipe"
        android:layout_below="@+id/iv_receipe"
        android:layout_margin="5dp">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/btn_nutritivevalue"
            android:text="Nutritive value"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/btn_ingredients"
            android:text="Ingredients"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_btnmethode"
            android:layout_weight="0.05"
            android:text="Method" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/id_btn_healthbenifits"
            android:text="health benifits"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_receipe"
        android:layout_toRightOf="@id/id_linearlayoutreceipe">

        <TextView
            android:id="@+id/txtview_mrthod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_linearlayoutreceipe"
            android:padding="5dp"
            android:text="dfdbcnxbcnxbcsdfgshfdhsfdjhsdhdhsdghsgdhsgdjhsgdhsgdhsgdjhsgdhjsgdhsgdhsgdhsgdhsgdhsdgshdgshdgshd
                           vdvbnsvdbsvnvsncxnnxbncbxcnbnxbcnxc" />
    </android.support.v7.widget.CardView>

</RelativeLayout>