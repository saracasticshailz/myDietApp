<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar">
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:id="@+id/txtviewa"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtviewa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:id="@+id/txtviews"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Subject"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:id="@+id/txtview_esc_sub"
            android:layout_margin="5dp"
            android:text="aaaaaaaaaaaaaaa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue"
            android:textStyle="bold"
            android:textColor="@color/colorGray"
            android:id="@+id/txtviewi"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            android:textColor="@color/colorGray"
            android:id="@+id/txtview_esc_issue"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textStyle="bold"
            android:textColor="@color/colorGray"
            android:id="@+id/txtviewan"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaa"
            android:textColor="@color/colorGray"
            android:id="@+id/txtview_esc_ans"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>