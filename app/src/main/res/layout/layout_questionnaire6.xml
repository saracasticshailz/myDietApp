<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar"></include>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLEASE ENTER YOUR DAY RECALL"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/main"
        android:background="@drawable/shade"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:id="@+id/a">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="2"
            android:text="MEAL"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="TIME"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/colorPrimary"
            android:text="QUANTITY"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/a"
        android:layout_marginTop="20dp"
        android:id="@+id/ab">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:maxLines="1"
            android:id="@+id/ed_meal1"
            android:hint="enter meal"
            android:singleLine="true"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_one"
            android:text="00:00"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:maxLines="1"
            android:hint="enter qty"
            android:id="@+id/ed_qty1"
            android:singleLine="true"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/iv_one"
            android:layout_marginRight="3dp"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/ab"
        android:layout_marginTop="20dp"
        android:id="@+id/ab1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/ed_meal2"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_two"
            android:layout_weight="1"
            android:text="00:00"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/ed_qty2"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:id="@+id/iv_two"
            android:layout_weight="0.5"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/ab1"
        android:layout_marginTop="20dp"
        android:id="@+id/ab2">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/ed_meal3"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_three"
            android:text="00:00"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/ed_qty3"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/iv_three"
            android:layout_marginRight="3dp"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/ab2"
        android:layout_marginTop="20dp"
        android:id="@+id/ab3">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:maxLines="1"
            android:id="@+id/ed_meal4"
            android:singleLine="true"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_four"
            android:text="00:00"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/ed_qty4"
            android:layout_margin="3dp"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/iv_four"
            android:layout_marginRight="3dp"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_below="@+id/ab3"
        android:layout_marginTop="20dp"
        android:id="@+id/ab4">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/ed_meal5"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_five"
            android:text="00:00"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/ed_qty5"
            android:layout_margin="3dp"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:id="@+id/iv_five"
            android:layout_weight="0.5"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:textColor="@color/colorPrimary"
        android:text="add"
        android:background="@drawable/myloginbutton"
        android:layout_below="@+id/ab4"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_add"
        android:padding="15dp"
        android:id="@+id/dietary"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>