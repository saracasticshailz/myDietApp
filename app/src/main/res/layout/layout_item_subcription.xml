<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/ll_sub"
        android:weightSum="9"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_sub_plan"
            android:text="Plan Name"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_sub_duration"
            android:text="Duration"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_sub_subover"
            android:text="Subcription Over"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_sub_paidamt"
            android:text="Paid Amount"
            android:layout_weight="2"/>
    </LinearLayout>

        <Button
            android:id="@+id/btn_sub_invoice"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_sub"
            android:padding="1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/myloginbutton"
            android:text="Invoice"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:textSize="10dp" />
  </RelativeLayout>
</android.support.v7.widget.CardView>
