<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:padding="5dp"
    android:id="@+id/chat_main"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hh"
        android:background="@drawable/myloginbutton"
        android:layout_margin="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recv_date"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/recvd_message_body"
            android:text="rcvtime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/recvd_message_time"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/recvd_message_body"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/recvd_message_body"
            android:padding="5dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hhsend"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/defaultbtn"
        >
        <TextView
            android:id="@+id/send_message_date"
            android:text="sendmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/send_message_body"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/send_message_body"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="272dp"
            android:layout_toRightOf="@+id/send_message_date"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/send_message_date"/>
        <TextView
            android:id="@+id/send_message_time"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/send_message_body"
            android:padding="5dp"
            android:layout_toRightOf="@+id/send_message_body"/>
    </RelativeLayout>
</RelativeLayout>