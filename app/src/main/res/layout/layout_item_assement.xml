    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/llass"
        >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtview_ass_date"
                android:text="Date"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"/>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_weight"
            android:text="Weight"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:padding="4dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_bodyfats"
            android:text="Body Fats %"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_bodyage"
            android:text="Body Age"
            android:padding="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_resting"
            android:text="Resting Metabolism"
            android:padding="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_viscrel"
            android:text="Visceral Fat Level"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_bmi"
            android:text="BMI"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_waist"
            android:text="Waist"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_hips"
            android:text="Hips"
            android:padding="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_ass_r"
            android:text="Remark"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorGray"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="5dp"/>

    </TableLayout>
<!--</android.support.v7.widget.CardView>-->
</RelativeLayout>