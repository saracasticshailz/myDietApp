<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KNOW YOUR BODY"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:id="@+id/tvmain"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/tvmain"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tvmain"
            android:id="@+id/llmain">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Your Height (cm):"
                        android:textSize="18dp"
                        android:drawableEnd="@drawable/star"
                        android:drawableRight="@drawable/star"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/kyb_height"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:textSize="13dp"
                        android:hint="For Example 168cm"
                        android:textCursorDrawable="@null"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Your Weight :"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/star"
                        />
                    <EditText
                        android:id="@+id/kyb_weight"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:textSize="13dp"
                        android:hint="For Example 67.kg"
                        android:textCursorDrawable="@null"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Your Age :"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/star"
                        />
                    <EditText
                        android:id="@+id/kyb_age"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:textSize="13dp"
                        android:hint="For Example age"
                        android:textCursorDrawable="@null"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/star"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/male"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Female"
                            android:id="@+id/female"/>
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slide4">

            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llmain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Calculate"
            android:background="@drawable/myloginbutton"
            android:textColor="#ffffff"
            android:id="@+id/submitkyb"
            />
    </RelativeLayout>
</ScrollView>