<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dc_mealtype"
            android:text="type"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorGray"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/dc_mealtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorGray"
            android:layout_marginTop="10dp"
            android:text="time"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dc_mealtype"
            android:layout_marginTop="50dp"
            android:id="@+id/v"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorGray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"

            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr"
                >
                <TextView
                    android:id="@+id/dc_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAllCaps="true"

                    />
                <TextView
                    android:id="@+id/dc_mealname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textAllCaps="true"

                    />
                <TextView
                    android:id="@+id/dc_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"

                    />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr1"
                >
                <TextView
                    android:id="@+id/dc_remark1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/dc_mealname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="15sp"
                    android:layout_weight="3"

                    />
                <TextView
                    android:id="@+id/dc_quantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr2"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:id="@+id/dc_remark2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/dc_mealname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="15sp"
                    android:layout_weight="3"

                    />
                <TextView
                    android:id="@+id/dc_quantity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr3"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:id="@+id/dc_remark3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/dc_mealname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="15sp"
                    android:layout_weight="3"

                    />
                <TextView
                    android:id="@+id/dc_quantity3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr4"
                android:layout_marginTop="5dp"

                >
                <TextView
                    android:id="@+id/dc_remark4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/dc_mealname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="15sp"
                    android:layout_weight="3"

                    />
                <TextView
                    android:id="@+id/dc_quantity4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/tr5"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/dc_remark5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="Remark"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/dc_mealname5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v"
                    android:text="mealname"
                    android:textSize="15sp"
                    android:layout_weight="3"

                    />
                <TextView
                    android:id="@+id/dc_quantity5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/v"
                    android:layout_alignParentRight="true"
                    android:text="Quantity"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>

        </TableLayout>





    </RelativeLayout>
</android.support.v7.widget.CardView>